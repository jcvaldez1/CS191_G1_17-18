<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
     <item android:state_pressed="true" android:drawable="@color/dark_orange">
          <shape android:shape="rectangle">
               <corners android:radius="3dip" />
               <stroke android:width="1dip" android:color="@color/dark_orange" />

          </shape>
     </item>
     <item android:state_focused="true" android:drawable="@color/dark_orange">
          <shape android:shape="rectangle"  >
               <corners android:radius="3dip" />
               <stroke android:width="1dip" android:color="@color/dark_orange" />
          </shape>
     </item>
     <item >
          <shape android:shape="rectangle"  android:drawable="@color/white">
               <corners android:radius="3dip" />
               <stroke android:width="1dip" android:color="@color/dark_orange" />
          </shape>
     </item>
</selector>